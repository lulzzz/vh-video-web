{
    "version": "2.0.0",
    "tasks": [{
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "args": [
                "build",
                "${workspaceFolder}/VideoWeb/VideoWeb/VideoWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/VideoWeb/VideoWeb/VideoWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/VideoWeb/VideoWeb/VideoWeb.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "install npm",
            "type": "npm",
            "script": "install",
            "path": "${workspaceFolder}/VideoWeb/VideoWeb/ClientApp/",
            "problemMatcher": []
        },
        {
            "label": "ng serve",
            "type": "npm",
            "script": "start",
            "path": "${workspaceFolder}/VideoWeb/VideoWeb/ClientApp",
            "options": {
                "cwd": "${workspaceFolder}/VideoWeb/VideoWeb/ClientApp"
            },
            "isBackground": true,
            "presentation": {
                "focus": true,
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "Compiled |Failed to compile."
                    }
                }
            }
        },
        {
            "label": "SPA Build",
            "dependsOn": [
                "build",
                "ng serve"
            ]
        }
    ]
}